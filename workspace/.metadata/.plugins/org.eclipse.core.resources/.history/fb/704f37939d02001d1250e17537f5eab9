package com.globallogic.helloworld;

public class MyDecisionMaking {

	public static void main(String[] args) {

		int a = 10;
		int b = 20;
		// bussiness condition

		// if my a variable is greater than 20 than add both the value
		

		// if keyword
		// parameters
		// either true or false
		if (a>20)
		// if block //true
		{
			int c = a + b; // skip this line of code depend on the condition
		   System.out.println("sum is "+c);
		}
		else
			//false block
		{
			System.out.println("Business Validation is failed");	
		}

		System.out.println(c);
	}

}
